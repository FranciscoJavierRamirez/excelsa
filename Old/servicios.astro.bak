---

<Layout title="Servicios | EXCELSA Calidad de Vida">
  <!-- Control completo del fondo base mediante un div absolutamente posicionado con un degradado más atractivo -->
  <div class="fixed inset-0 z-[-8]">
    <div class="absolute inset-0 bg-gradient-to-b from-sky-100 via-white to-sky-50"></div>
    <!-- Patrón sutil para añadir textura -->
    <div class="absolute inset-0 opacity-3" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'%2338bdf8\' fill-opacity=\'0.5\' fill-rule=\'evenodd\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <!-- Elementos decorativos flotantes -->
  <div class="fixed inset-0 z-[-7] overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-[10%] w-[600px] h-[600px] bg-gradient-to-bl from-sky-100/15 to-transparent rounded-full blur-3xl floating"></div>
    <div class="absolute bottom-40 left-[5%] w-[700px] h-[700px] bg-gradient-to-tr from-sky-100/15 to-transparent rounded-full blur-3xl floating" style="animation-delay: -2s;"></div>
    <div class="absolute top-[40%] left-[30%] w-[400px] h-[400px] bg-gradient-to-tr from-sky-100/15 to-sky-50/15 rounded-full blur-3xl floating" style="animation-delay: -4s;"></div>
  </div>

  <style>
    /* Animación para los elementos flotantes */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
      100% { transform: translateY(0px); }
    }
    
    .floating {
      animation: float 6s ease-in-out infinite;
    }
    
    /* Estilos para secciones */
    .content-section {
      position: relative;
      margin-bottom: 6rem;
      border-radius: 1.5rem;
      background-color: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(12px);
      box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.1);
      overflow: hidden;
      transition: all 0.4s ease;
      border: 1px solid rgba(255, 255, 255, 0.8);
    }
    
    .content-section:hover {
      transform: translateY(-0.25rem);
      box-shadow: 0 20px 35px -10px rgba(59, 130, 246, 0.18);
    }
  </style>

  <div class="container mx-auto px-4 py-16">
    <!-- Encabezado principal -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <span class="inline-block bg-gradient-primary text-white text-sm font-medium px-4 py-1 rounded-full mb-4">NUESTRAS ESPECIALIDADES</span>
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Servicios Médicos</h1>
        <div class="divider-primary"></div>
        <p class="text-gray-600 text-lg max-w-3xl mx-auto">
          Descubre nuestros servicios de medicina convencional, psicología, medicina alternativa 
          y consultas integrativas diseñados para mejorar tu salud y calidad de vida.
        </p>
      </div>

      <!-- Categorías de servicio con navegación por pestañas -->
      <div class="mb-12">
        <div class="flex flex-wrap justify-center mb-8 border-b border-gray-200 gap-2">
          {serviceCategories.map((category, index) => (
            <button 
              id={`tab-${category.id}`} 
              data-category-id={category.id}
              class={`tab-button py-3 px-5 border-b-2 ${index === 0 ? 'active ' : 'border-transparent '} font-medium transition-all`}
              style={index === 0 ? 
                `border-color: ${
                  category.id === 'medicina-convencional' ? '#3b82f6' :
                  category.id === 'psicologia' ? '#f59e0b' :
                  category.id === 'medicina-alternativa' ? '#22c55e' :
                  '#9333ea'
                }; color: ${
                  category.id === 'medicina-convencional' ? '#3b82f6' :
                  category.id === 'psicologia' ? '#f59e0b' :
                  category.id === 'medicina-alternativa' ? '#22c55e' :
                  '#9333ea'
                };` : 
                ''
              }
              onmouseover={`if(!this.classList.contains('active')) { this.style.color='${
                category.id === 'medicina-convencional' ? '#3b82f6' :
                category.id === 'psicologia' ? '#f59e0b' :
                category.id === 'medicina-alternativa' ? '#22c55e' :
                '#9333ea'
              }'; }`}
              onmouseout={`if(!this.classList.contains('active')) { this.style.color=''; }`}
            >
              {category.name}
            </button>
          ))}
        </div>

        <!-- Contenido de las pestañas -->
        {serviceCategories.map((category, categoryIndex) => (
          <div 
            id={`tab-content-${category.id}`} 
            class={`tab-content ${categoryIndex === 0 ? 'active' : 'hidden'}`}
          >
            <div class="grid md:grid-cols-2 gap-8 auto-rows-fr">
              {category.services.map((service) => (
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform transition-all hover:shadow-2xl hover:-translate-y-1 hover:scale-[1.02]">
                  <div class="p-[3px] rounded-2xl h-full flex flex-col" style={
                    category.id === 'medicina-convencional' 
                      ? 'background: linear-gradient(135deg, #3b82f6, #2dd4bf)' 
                      : category.id === 'psicologia'
                        ? 'background: linear-gradient(135deg, #f59e0b, #fb923c)'
                      : category.id === 'medicina-alternativa' 
                        ? 'background: linear-gradient(135deg, #22c55e, #2dd4bf)' 
                        : 'background: linear-gradient(135deg, #9333ea, #ec4899)'
                  }>
                    <div class="bg-white p-6 rounded-xl flex-grow flex flex-col">
                      <div class="flex items-center mb-4">
                        <span class="inline-block w-10 h-10 rounded-full text-white flex items-center justify-center mr-3 flex-shrink-0" style={
                          category.id === 'medicina-convencional' 
                            ? 'background: linear-gradient(135deg, #3b82f6, #2dd4bf)' 
                            : category.id === 'psicologia'
                              ? 'background: linear-gradient(135deg, #f59e0b, #fb923c)'
                            : category.id === 'medicina-alternativa' 
                              ? 'background: linear-gradient(135deg, #22c55e, #2dd4bf)' 
                              : 'background: linear-gradient(135deg, #9333ea, #ec4899)'
                        }>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath(service.icon)} />
                          </svg>
                        </span>
                        <h3 class={`text-xl font-bold ${serviceThemes[category.id].text}`}>{service.title}</h3>
                      </div>
                      
                      <p class="text-gray-600 mb-4">
                        {service.description}
                      </p>
                      
                      <div class="mb-4">
                        <button class={`toggle-details flex items-center ${serviceThemes[category.id].text}`}>
                          <svg xmlns="http://www.w3.org/2000/svg" class={`h-5 w-5 mr-1 transform transition-transform ${serviceThemes[category.id].text}`} fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                          </svg>
                          Ver detalles
                        </button>
                        
                        <div class="service-details hidden mt-4 bg-gray-50 p-4 rounded-lg border border-r-0 border-b-0 border-l-4 shadow-inner" style={`border-left-color: ${
                          category.id === 'medicina-convencional' ? '#3b82f6' :
                          category.id === 'psicologia' ? '#f59e0b' :
                          category.id === 'medicina-alternativa' ? '#22c55e' :
                          '#9333ea'
                        }`}>
                          {service.benefits && service.benefits.length > 0 && (
                            <div class="mb-4">
                              <h4 class={`font-semibold ${serviceThemes[category.id].text} mb-2`}>Beneficios:</h4>
                              <ul class="grid grid-cols-2 gap-2">
                                {service.benefits.map((benefit) => (
