<Layout title="Servicios | EXCELSA Calidad de Vida">
  <div class="container mx-auto px-4 py-16">
    <!-- Encabezado principal -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <span class="inline-block bg-gradient-to-r from-teal-500 to-sky-400 text-white text-sm font-medium px-4 py-1 rounded-full mb-4">NUESTRAS ESPECIALIDADES</span>
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Servicios Médicos</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-teal-500 to-sky-400 mx-auto mb-6 rounded-full"></div>
        <p class="text-gray-600 text-lg max-w-3xl mx-auto">
          Descubre nuestros servicios de medicina convencional, psicología, medicina alternativa 
          y consultas integrativas diseñados para mejorar tu salud y calidad de vida.
        </p>
      </div>

      <!-- Categorías de servicio con navegación por pestañas -->
      <div class="mb-12">
        <div class="flex flex-wrap justify-center mb-8 border-b border-gray-200 gap-2">
          {serviceCategories.map((category, index) => (
            <button 
              id={`tab-${category.id}`} 
              class={`tab-button py-3 px-5 border-b-2 ${index === 0 ? 'active border-teal-500 text-teal-600' : 'border-transparent hover:text-teal-600'} font-medium transition-all`}
            >
              {category.name}
            </button>
          ))}
        </div>

        <!-- Contenido de las pestañas -->
        {serviceCategories.map((category, categoryIndex) => (
          <div 
            id={`tab-content-${category.id}`} 
            class={`tab-content ${categoryIndex === 0 ? 'active' : 'hidden'}`}
          >
            <div class="grid md:grid-cols-2 gap-8">
              {category.services.map((service) => (
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden transform transition-all hover:shadow-2xl hover:-translate-y-1">
                  <div class={`p-1 bg-gradient-to-r from-${service.color}-500 to-${service.color === 'blue' ? 'sky' : service.color === 'orange' ? 'amber' : service.color === 'green' ? 'teal' : 'violet'}-400`}>
                    <div class="bg-white p-6">
                      <div class="flex items-center mb-4">
                        <span class={`inline-block w-10 h-10 rounded-full bg-gradient-to-r from-${service.color}-500 to-${service.color === 'blue' ? 'sky' : service.color === 'orange' ? 'amber' : service.color === 'green' ? 'teal' : 'violet'}-400 text-white flex items-center justify-center mr-3 flex-shrink-0`}>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath(service.icon)} />
                          </svg>
                        </span>
                        <h3 class="text-xl font-bold text-gray-800">{service.title}</h3>
                      </div>
                      
                      <p class="text-gray-600 mb-4">
                        {service.description}
                      </p>
                      
                      <div class="mb-4">
                        <button class="toggle-details flex items-center text-blue-600 hover:text-blue-800">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 transform transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                          </svg>
                          Ver detalles
                        </button>
                        
                        <div class="service-details hidden mt-4 bg-gray-50 p-4 rounded-lg">
                          {service.benefits && service.benefits.length > 0 && (
                            <div class="mb-4">
                              <h4 class={`font-semibold text-${service.color}-700 mb-2`}>Beneficios:</h4>
                              <ul class="grid grid-cols-2 gap-2">
                                {service.benefits.map((benefit) => (
                                  <li class="flex items-start bg-white p-2 rounded shadow-sm">
                                    <span class={`text-${service.color}-500 mr-1`}>✓</span>
                                    <span class="text-gray-700">{benefit}</span>
                                  </li>
                                ))}
                              </ul>
                            </div>
                          )}
                          
                          {service.conditions && service.conditions.length > 0 && (
                            <div class="mb-4">
                              <h4 class={`font-semibold text-${service.color}-700 mb-2`}>Condiciones tratadas:</h4>
                              <ul class="list-disc list-inside mb-4 pl-2 text-gray-700">
                                {service.conditions.map((condition) => (
                                  <li>{condition}</li>
                                ))}
                              </ul>
                            </div>
                          )}
                          
                          {service.procedures && service.procedures.length > 0 && (
                            <div class="mb-4">
                              <h4 class={`font-semibold text-${service.color}-700 mb-2`}>Procedimientos:</h4>
                              <ul class="list-disc list-inside mb-4 pl-2 text-gray-700">
                                {service.procedures.map((procedure) => (
                                  <li>{procedure}</li>
                                ))}
                              </ul>
                            </div>
                          )}
                          
                          {service.technology && service.technology.length > 0 && (
                            <div class="mb-4">
                              <h4 class={`font-semibold text-${service.color}-700 mb-2`}>Tecnología:</h4>
                              <ul class="list-disc list-inside mb-4 pl-2 text-gray-700">
                                {service.technology.map((tech) => (
                                  <li>{tech}</li>
                                ))}
                              </ul>
                            </div>
                          )}
                          
                          {service.process && (
                            <div class="mb-4">
                              <h4 class={`font-semibold text-${service.color}-700 mb-2`}>Proceso:</h4>
                              <p class="text-gray-700">{service.process}</p>
                            </div>
                          )}
                          
                          {service.schedule && (
                            <div class={`flex items-center mt-4 p-3 bg-white rounded-lg shadow-sm`}>
                              <span class={`w-8 h-8 rounded-full bg-${service.color}-100 text-${service.color}-600 flex items-center justify-center mr-3`}>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                              </span>
                              <div>
                                <strong class="block text-gray-800">Horarios:</strong>
                                <span class="text-gray-600">{service.schedule}</span>
                              </div>
                            </div>
                          )}
                          
                          {(service.specialist || service.specialists) && (
                            <div class={`flex items-center mt-3 p-3 bg-white rounded-lg shadow-sm`}>
                              <span class={`w-8 h-8 rounded-full bg-${service.color}-100 text-${service.color}-600 flex items-center justify-center mr-3`}>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                              </span>
                              <div>
                                <strong class="block text-gray-800">{service.specialists ? 'Especialistas:' : 'Especialista:'}</strong>
                                <span class="text-gray-600">
                                  {service.specialist || service.specialists?.join(', ')}
                                </span>
                              </div>
                            </div>
                          )}
                        </div>
                      </div>
                      
                      <a href="/contacto/reservar-cita" class={`inline-block bg-gradient-to-r from-${service.color}-500 to-${service.color === 'blue' ? 'sky' : service.color === 'orange' ? 'amber' : service.color === 'green' ? 'teal' : 'violet'}-400 text-white py-2 px-4 rounded-lg text-sm font-medium hover:from-${service.color}-600 hover:to-${service.color === 'blue' ? 'sky' : service.color === 'orange' ? 'amber' : service.color === 'green' ? 'teal' : 'violet'}-500 transition-all shadow-md hover:shadow-lg`}>
                        Reservar cita
                      </a>
                    </div>
                  </div>
                </div>
              ))}
