---
// src/pages/nosotros.astro
import Layout from '../layouts/MainLayout.astro';
import MissionVision from '../components/about/MissionVision.astro';
import TeamSection from '../components/about/TeamSection.astro';
import TeamGallery from '../components/about/TeamGallery.astro';
---

<Layout title="Nosotros | EXCELSA Calidad de Vida">
  <!-- Nuevo diseño de fondo cohesivo -->
  <style is:global>
    /* Fondo base con degradado de alta calidad */
    body {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #e0f7fa 100%) !important;
    }
    
    /* Ocultar el div de gradiente del MainLayout */
    body > div:first-of-type {
      display: none !important;
    }
    
    /* Patrón sutil para añadir textura */
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2399c5dc' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      z-index: -1;
      pointer-events: none;
    }
    
    /* Variables CSS para consistencia */
    :root {
      --card-radius: 1.25rem;
      --section-radius: 1.5rem;
      --shadow-standard: 0 10px 25px -5px rgba(59, 130, 246, 0.1), 0 8px 15px -6px rgba(0, 152, 163, 0.05);
      --shadow-hover: 0 20px 35px -10px rgba(59, 130, 246, 0.18), 0 10px 20px -10px rgba(0, 152, 163, 0.08);
      --gradient-primary: linear-gradient(135deg, #3b82f6, #0ea5e9);
      --gradient-secondary: linear-gradient(135deg, #0ea5e9, #14b8a6);
      --border-light: 1px solid rgba(255, 255, 255, 0.6);
    }
    
    /* Clases comunes para las secciones */
    .section-container {
      position: relative;
      margin-bottom: 6rem;
      border-radius: var(--section-radius);
      transition: transform 0.5s ease, box-shadow 0.5s ease;
    }
    
    .section-container:hover {
      transform: translateY(-0.25rem);
    }
    
    .section-bg {
      position: absolute;
      inset: 0;
      border-radius: var(--section-radius);
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      box-shadow: var(--shadow-standard);
      border: var(--border-light);
      transition: box-shadow 0.5s ease;
    }
    
    .section-container:hover .section-bg {
      box-shadow: var(--shadow-hover);
    }
    
    /* Clases para tarjetas */
    .card-container {
      background: white;
      border-radius: var(--card-radius);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 4px 15px -3px rgba(0, 0, 0, 0.1);
    }
    
    .card-container:hover {
      transform: translateY(-0.25rem);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
      background: var(--gradient-primary);
      padding: 1.5rem;
      color: white;
    }
    
    /* Animaciones sutiles */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
      100% { transform: translateY(0px); }
    }
    
    .floating {
      animation: float 6s ease-in-out infinite;
    }
  </style>

  <!-- Elementos de fondo decorativos -->
  <div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
    <!-- Formas orgánicas flotantes -->
    <div class="absolute top-20 right-[10%] w-[500px] h-[500px] bg-gradient-to-bl from-blue-200/10 to-transparent rounded-full blur-3xl floating"></div>
    <div class="absolute bottom-40 left-[5%] w-[600px] h-[600px] bg-gradient-to-tr from-teal-200/10 to-transparent rounded-full blur-3xl floating" style="animation-delay: -2s;"></div>
    <div class="absolute top-[40%] left-[30%] w-[300px] h-[300px] bg-gradient-to-tr from-blue-100/10 to-teal-100/10 rounded-full blur-3xl floating" style="animation-delay: -4s;"></div>
  </div>

  <!-- Contenedor principal con estilo mejorado -->
  <div class="container mx-auto px-4 py-16 relative">
    <!-- SECCIÓN 1: VALORES Y PRINCIPIOS -->
    <section class="section-container">
      <div class="section-bg"></div>
      <div class="relative z-10 px-6 py-12">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-block bg-gradient-to-r from-blue-500 to-teal-400 text-white text-sm font-medium px-5 py-1.5 rounded-full mb-4 shadow-md">FUNDAMENTOS</span>
            <h2 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent mb-4">Nuestros Valores y Principios</h2>
