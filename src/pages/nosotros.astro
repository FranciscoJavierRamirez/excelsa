---
// src/pages/nosotros.astro
import Layout from '../layouts/MainLayout.astro';
import MissionVision from '../components/about/MissionVision.astro';
import TeamSection from '../components/about/TeamSection.astro';
import TeamGallery from '../components/about/TeamGallery.astro';
import { getThemeColors, getTeamMemberGradient } from '../utils/colorThemes';

// Definir el tema principal para esta página
const mainTheme = getThemeColors('brand');

// Obtener gradientes específicos para cada miembro del equipo
const sergioGradient = getTeamMemberGradient('sergio');
const sherilGradient = getTeamMemberGradient('sheril');
const giancarloGradient = getTeamMemberGradient('giancarlo');
const gianfrancoGradient = getTeamMemberGradient('gianfranco');
const sergioMatiasGradient = getTeamMemberGradient('sergiomatias');
---

<Layout title="Nosotros | EXCELSA Calidad de Vida">
  <!-- Estilos específicos para esta página -->
  <style>
    /* Sobrescribir solo estilos específicos necesarios para esta página */
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background-image: var(--background-pattern);
      z-index: -1;
      pointer-events: none;
    }
    
    /* Animaciones para elementos flotantes */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
      100% { transform: translateY(0px); }
    }
    
    .floating {
      animation: float 6s ease-in-out infinite;
    }
  </style>

  <!-- Elementos de fondo decorativos -->
  <div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
    <!-- Formas orgánicas flotantes con clases de color consistentes -->
    <div class="absolute top-20 right-[10%] w-[500px] h-[500px] bg-gradient-to-bl from-primary-100/10 to-transparent rounded-full blur-3xl floating"></div>
    <div class="absolute bottom-40 left-[5%] w-[600px] h-[600px] bg-gradient-to-tr from-primary-100/10 to-transparent rounded-full blur-3xl floating" style="animation-delay: -2s;"></div>
    <div class="absolute top-[40%] left-[30%] w-[300px] h-[300px] bg-gradient-to-tr from-primary-100/10 to-primary-50/10 rounded-full blur-3xl floating" style="animation-delay: -4s;"></div>
  </div>

  <!-- Contenedor principal con estilo mejorado -->
  <div class="container mx-auto px-4 py-16 relative">
    <!-- SECCIÓN 1: VALORES Y PRINCIPIOS -->
    <section class="section-container">
      <div class="section-bg"></div>
      <div class="relative z-10 px-6 py-12">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-block badge badge-primary mb-4 shadow-md">FUNDAMENTOS</span>
            <h2 class="text-4xl font-bold text-gradient bg-gradient-primary mb-4">Nuestros Valores y Principios</h2>
            <div class="divider-primary"></div>
            <p class="text-gray-600 text-lg max-w-3xl mx-auto">
              Los pilares fundamentales que guían nuestra labor y definen la metodología EXCELSA.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Valores card -->
            <div class="card-container group">
              <div class="card-header relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-primary"></div>
                <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23fff' fill-opacity='0.05' fill-rule='evenodd'%3E%3Cpath d='M0 38.59l2.83-2.83 1.41 1.41L1.41 40H0v-1.41zM0 20.01l20-20 1.41 1.41L1.41 21.42H0v-1.41zM20 1.41l18.59 18.59H40V21.41L20 1.41zM30 10.01l10-10V1.41L29.42 12.01 30 12.6z' /%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
                <h2 class="text-2xl font-bold text-white relative z-10 flex items-center">
                  <span class="inline-block w-10 h-10 bg-white/10 rounded-full flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                  </span>
                  Nuestros Valores
                </h2>
              </div>
              
              <div class="p-8">
                <ul class="space-y-3">
                  <li class="flex items-center text-gray-800">
                    <span class="w-8 h-8 rounded-full bg-gradient-primary flex items-center justify-center mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </span>
                    <span class="text-lg">Excelencia</span>
                  </li>
                  <li class="flex items-center text-gray-800">
                    <span class="w-8 h-8 rounded-full bg-gradient-primary flex items-center justify-center mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </span>
                    <span class="text-lg">Acogida</span>
                  </li>
                  <li class="flex items-center text-gray-800">
                    <span class="w-8 h-8 rounded-full bg-gradient-primary flex items-center justify-center mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </span>
                    <span class="text-lg">Autovalencia</span>
                  </li>
                  <li class="flex items-center text-gray-800">
                    <span class="w-8 h-8 rounded-full bg-gradient-primary flex items-center justify-center mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
