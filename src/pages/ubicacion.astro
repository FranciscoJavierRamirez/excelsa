---
// src/pages/ubicacion.astro
import MainLayout from '../layouts/MainLayout.astro';
import GoogleMap from '../components/location/GoogleMap.astro';
import DirectionsInfo from '../components/location/DirectionsInfo.astro';
import BusinessHours from '../components/location/BusinessHours.astro';
import { getThemeColors } from '../utils/themeUtils';

// Obtenemos los colores del tema principal (brand)
const brandTheme = getThemeColors('brand');

const businessHours = [
  { day: "Lunes a Viernes", hours: "8:00 - 20:00" },
  { day: "Sábados", hours: "9:00 - 14:00" },
  { day: "Domingos", hours: "Cerrado" }
];

const transportOptions = [
  {
    type: "Transporte Público",
    details: [
      "Metro: Línea 2, Estación 'Salud', salida Norte",
      "Autobús: Líneas 45, 67 y 89 con parada frente al centro"
    ]
  },
  {
    type: "Estacionamiento",
    details: [
      "Estacionamiento propio con 30 espacios",
      "Estacionamiento público a 100m (tarifa preferencial para pacientes)"
    ]
  }
];
---

<MainLayout 
  title="Ubicación | Vida Plena"
  description="Encuentre cómo llegar a nuestro centro médico y nuestros horarios de atención">
  
  <div class="section-container mt-24 mb-16">
    <div class="section-bg"></div>
    
    <div class="container mx-auto px-4 py-12">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-bold mb-4 text-gradient-primary">Nuestra Ubicación</h1>
        <div class="divider-primary"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">Te esperamos en nuestro centro integral, donde hemos creado un espacio acogedor diseñado para tu bienestar y comodidad.</p>
      </div>

      <div class="card-container overflow-hidden mb-12">
        <GoogleMap
          address="Av. Salud 123, Col. Bienestar, Ciudad de México"
          lat={19.4326}
          lng={-99.1332}
          zoom={16}
          height="450px"
        />
      </div>

      <div class="grid md:grid-cols-2 gap-8 mt-12">
        <!-- Información de Transporte -->
        <div class="card-container p-1 bg-gradient-primary">
          <div class="bg-white p-6 rounded-xl h-full">
            <div class="flex items-center mb-4">
              <div class="gradient-icon-conventional mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h2 class="text-2xl font-serif font-semibold text-primary-dark">Cómo Llegar</h2>
            </div>
            <DirectionsInfo transportOptions={transportOptions} />
            <div class="mt-6">
              <a href="https://maps.google.com" target="_blank" class="button-primary inline-flex items-center">
                <span>Abrir en Google Maps</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Horarios de Atención -->
        <div class="card-container p-1 bg-gradient-primary">
          <div class="bg-white p-6 rounded-xl h-full">
            <div class="flex items-center mb-4">
              <div class="gradient-icon-conventional mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h2 class="text-2xl font-serif font-semibold text-primary-dark">Horarios de Atención</h2>
            </div>
            <BusinessHours hours={businessHours} />
            <div class="mt-6">
              <a href="/contacto" class="button-outline inline-flex items-center">
                <span>Reservar una cita</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA final -->
      <div class="cta-container mt-16">
        <h2 class="text-2xl font-bold mb-3">¿Necesitas ayuda para llegar?</h2>
        <p class="mb-6 max-w-2xl mx-auto">Nuestro equipo está disponible para brindarte asistencia. Contáctanos directamente y te guiaremos.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="tel:+525512345678" class="bg-white text-sky-500 py-2 px-6 rounded-md transition-colors hover:bg-sky-50 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            +52 55 1234 5678
          </a>
          <a href="mailto:info@vidaplena.com" class="bg-white text-sky-500 py-2 px-6 rounded-md transition-colors hover:bg-sky-50 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            info@vidaplena.com
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Estilos específicos para la página de ubicación */
    .card-container {
      transition: transform 0.3s ease;
    }
    
    .card-container:hover {
      transform: translateY(-5px);
    }

    /* Asegurar que los gradientes se apliquen correctamente */
    .bg-gradient-primary {
      background: var(--gradient-primary);
    }

    .text-gradient-primary {
      background-image: var(--gradient-primary);
      background-clip: text;
      color: transparent;
    }
  </style>
</MainLayout>