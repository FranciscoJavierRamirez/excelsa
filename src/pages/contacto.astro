---
import Layout from '../layouts/MainLayout.astro';
---

<Layout title="Contacto | EXCELSA Calidad de Vida">
  <!-- Control completo del fondo base mediante un div absolutamente posicionado con un degradado más atractivo -->
  <div class="fixed inset-0 z-[-8]">
    <div class="absolute inset-0 bg-gradient-to-b from-sky-200 via-white to-blue-50"></div>
    <!-- Patrón sutil para añadir textura -->
    <div class="absolute inset-0 opacity-3" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'%2338bdf8\' fill-opacity=\'0.5\' fill-rule=\'evenodd\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <!-- Elementos decorativos flotantes con gradientes mejorados -->
  <div class="fixed inset-0 z-[-7] overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-[10%] w-[600px] h-[600px] bg-gradient-to-bl from-blue-100/20 to-sky-200/10 rounded-full blur-3xl floating"></div>
    <div class="absolute bottom-40 left-[5%] w-[700px] h-[700px] bg-gradient-to-tr from-sky-200/20 to-indigo-100/10 rounded-full blur-3xl floating" style="animation-delay: -2s;"></div>
    <div class="absolute top-[40%] left-[30%] w-[400px] h-[400px] bg-gradient-to-tr from-cyan-100/15 to-blue-50/15 rounded-full blur-3xl floating" style="animation-delay: -4s;"></div>
  </div>

  <style>
    /* Animación para los elementos flotantes */
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
      100% { transform: translateY(0px); }
    }
    
    .floating {
      animation: float 6s ease-in-out infinite;
    }
    
    /* Estilos para secciones con gradientes modernos */
    .content-section {
      position: relative;
      margin-bottom: 2rem;
      border-radius: 1.5rem;
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.1);
      overflow: hidden;
      transition: all 0.4s ease;
      border: 1px solid rgba(255, 255, 255, 0.8);
    }
    
    .content-section::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: 1.5rem;
      padding: 2px;
      background: linear-gradient(135deg, rgba(14, 165, 233, 0.3), rgba(56, 189, 248, 0.1), rgba(186, 230, 253, 0.2));
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
    }
    
    .content-section:hover {
      transform: translateY(-0.25rem);
      box-shadow: 0 20px 35px -10px rgba(59, 130, 246, 0.18);
    }

    .section-divider {
      height: 2px;
      width: 100px;
      background: linear-gradient(to right, #0ea5e9, #38bdf8, #7dd3fc);
      margin: 0 auto;
      border-radius: 2px;
    }
    
    /* Gradientes para iconos */
    .icon-gradient {
      background: linear-gradient(135deg, #0ea5e9, #38bdf8);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
  </style>

  <div class="container mx-auto px-4 py-16 relative z-10">
    <div class="text-center mb-12 max-w-3xl mx-auto">
      <div class="inline-block p-3 bg-gradient-to-r from-sky-400 to-blue-300 rounded-full mb-4 shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-sky-600 via-sky-500 to-blue-400 bg-clip-text text-transparent mb-3">Contáctanos</h1>
      <div class="w-24 h-1 bg-gradient-to-r from-sky-400 via-sky-300 to-blue-200 mx-auto mb-6 rounded-full"></div>
      <p class="text-xl text-gray-600">
        Estamos aquí para atenderte y responder cualquier consulta sobre nuestros servicios
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Información de Contacto -->
      <div class="content-section bg-white/80 backdrop-blur-sm p-8 transform transition-all hover:-translate-y-1 duration-300">
        <h2 class="text-2xl font-bold bg-gradient-to-r from-sky-600 via-sky-500 to-blue-400 bg-clip-text text-transparent mb-6">Información de Contacto</h2>
        
        <div class="mb-8 flex items-start">
          <span class="w-12 h-12 rounded-full bg-gradient-to-br from-sky-100 to-blue-50 text-sky-500 flex items-center justify-center mr-4 flex-shrink-0 shadow-sm">
