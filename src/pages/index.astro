---
import Layout from '../layouts/MainLayout.astro';
import ImageCarousel from '../components/home/ImageCarousel.astro';
import ServiceCategories from '../components/services/ServiceCategories.astro';
import TeamSection from '../components/about/TeamSection.astro';
import ContactInfo from '../components/common/ContactInfo.astro';

const serviceCategories = [
  {
