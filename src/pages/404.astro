---
import { Fragment } from "astro/jsx-runtime";
import MainLayout from "../layouts/MainLayout.astro";
import { SEO } from "astro-seo";
import { getSEOConfig } from "../utils/seo";

const seoConfig = getSEOConfig({
  title: "Página no encontrada",
  description: "La página solicitada no fue encontrada",
  path: "/404",
  noindex: true,
  nofollow: true
});
---

<MainLayout title="Página no encontrada">
  <Fragment slot="head">
    <title>{seoConfig.title} | Excelsa</title>
    <SEO {...seoConfig} />
  </Fragment>
  <div class="container mx-auto px-4 py-16 mt-16 flex flex-col items-center justify-center min-h-[60vh]">
    <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-8">Página no encontrada</h2>
    <p class="text-lg text-gray-600 mb-8 text-center max-w-lg">
      Lo sentimos, la página que estás buscando no existe o ha sido movida.
    </p>
    <a href="/" class="bg-primary hover:bg-primary-dark text-white font-medium py-2 px-6 rounded-md transition-colors">
      Volver al inicio
    </a>
  </div>
</MainLayout>
