---
interface GalleryImage {
  src: string;
  alt: string;
}

interface Props {
  images: GalleryImage[];
}

const { images } = Astro.props;
---

<section class="py-12">
  <h2 class="text-3xl font-bold text-center text-primary mb-10">Galer√≠a</h2>
  
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    {images.map(image => (
      <div class="overflow-hidden rounded-lg shadow-md aspect-ratio-4/3 h-64">
        <img 
          src={image.src} 
          alt={image.alt} 
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          onerror="this.src='/assets/images/placeholder-gallery.jpg'; this.onerror=null;"
        />
      </div>
    ))}
  </div>
</section> 