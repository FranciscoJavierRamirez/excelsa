---
interface BlogPost {
  title: string;
  slug: string;
  excerpt: string;
  publishDate: string;
  featuredImage: string;
  author: string;
}

interface Props {
  posts: BlogPost[];
}

const { posts } = Astro.props;

// Formatear la fecha para mostrarla en un formato más amigable
const formatDate = (dateString: string) => {
  const options: Intl.DateTimeFormatOptions = { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  };
  return new Date(dateString).toLocaleDateString('es-ES', options);
};
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
  {posts.map(post => (
    <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
      <div class="h-48 overflow-hidden">
        <img 
          src={post.featuredImage} 
          alt={post.title}
          class="w-full h-full object-cover transition-transform hover:scale-105 duration-300"
          onerror="this.src='/assets/images/blog/default-blog.jpg'; this.onerror=null;"
        />
      </div>
      <div class="p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2 line-clamp-2">
          <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
            {post.title}
          </a>
        </h2>
        <div class="flex items-center text-sm text-gray-500 mb-3">
          <span>{formatDate(post.publishDate)}</span>
          <span class="mx-2">•</span>
          <span>{post.author}</span>
        </div>
        <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>
        <a 
          href={`/blog/${post.slug}`} 
          class="inline-flex items-center text-primary hover:text-primary-dark font-medium"
        >
          Leer más
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </article>
  ))}
</div>

{posts.length === 0 && (
  <div class="text-center py-12">
    <p class="text-gray-600">No se encontraron artículos.</p>
  </div>
)} 