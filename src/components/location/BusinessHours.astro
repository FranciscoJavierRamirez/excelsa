---
interface BusinessHour {
  day: string;
  hours: string;
}

interface Props {
  hours: BusinessHour[];
}

const { hours } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-semibold text-primary mb-6">Horario de Atención</h2>
  
  <div class="space-y-4">
    {hours.map(item => (
      <div class="flex justify-between items-center pb-3 border-b border-gray-100 last:border-b-0">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="text-gray-800 font-medium">{item.day}</span>
        </div>
        <span class={`text-lg font-semibold ${item.hours === "Cerrado" ? "text-red-500" : "text-primary"}`}>
          {item.hours}
        </span>
      </div>
    ))}
  </div>
  
  <div class="mt-8 pt-4 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Citas
    </h3>
    <p class="text-gray-600 mb-4">
      Recomendamos agendar su cita con anticipación para garantizar una atención oportuna.
    </p>
    <a href="/contacto" class="inline-block bg-primary text-white py-2 px-4 rounded hover:bg-primary-dark transition-colors">
      Agendar Cita
    </a>
  </div>
</div> 