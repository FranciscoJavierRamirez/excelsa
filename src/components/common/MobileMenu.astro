---
// MobileMenu.astro
import Icon from "./Icon.astro";
import Logo from "./Logo.astro";
---

<div class="relative">
  <button id="mobile-menu-button" class="p-2 text-gray-700 hover:text-blue-600 transition-colors">
    <Icon name="menu" class="w-6 h-6" />
  </button>

  <div id="mobile-menu" class="hidden fixed inset-0 bg-white z-50">
    <div class="container mx-auto px-4 py-8">
      <div class="flex justify-between items-center mb-8">
        <Logo />
        <button id="close-menu" class="p-2 text-gray-700 hover:text-blue-600 transition-colors">
          <Icon name="close" class="w-6 h-6" />
        </button>
      </div>

      <nav class="flex flex-col space-y-4">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors py-2">Inicio</a>
        <a href="/nosotros" class="text-gray-700 hover:text-blue-600 transition-colors py-2">Nosotros</a>
        <a href="/servicios" class="text-gray-700 hover:text-blue-600 transition-colors py-2">Servicios</a>
        <a href="/cursos" class="text-gray-700 hover:text-blue-600 transition-colors py-2">Cursos</a>
        <a href="/contacto" class="text-gray-700 hover:text-blue-600 transition-colors py-2">Contacto</a>
        <a href="https://excelsa.site.agendapro.com/cl/sucursal/11444" 
           class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center">
          Agendar Cita
        </a>
      </nav>
    </div>
  </div>
</div>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const closeButton = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton.addEventListener('click', () => {
    mobileMenu.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  closeButton.addEventListener('click', () => {
    mobileMenu.classList.add('hidden');
    document.body.style.overflow = '';
  });
</script> 