      </div>
      
      <!-- Columna 2: Enlaces Rápidos -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Enlaces Rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="hover:underline hover:text-sky-100 transition-colors">Inicio</a>
          </li>
          <li>
            <a href="/nosotros" class="hover:underline hover:text-sky-100 transition-colors">Nosotros</a>
          </li>
          <li>
            <a href="/servicios" class="hover:underline hover:text-sky-100 transition-colors">Servicios</a>
          </li>
          <li>
            <a href="/ubicacion" class="hover:underline hover:text-sky-100 transition-colors">Ubicación</a>
          </li>
          <li>
            <a href="/blog" class="hover:underline hover:text-sky-100 transition-colors">Blog</a>
          </li>
          <li>
            <a href="/contacto" class="hover:underline hover:text-sky-100 transition-colors">Contacto</a>
          </li>
        </ul>
      </div>
      
      <!-- Columna 3: Centros -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Centros</h3>
        
        <!-- Centro La Reina -->
        <div class="mb-6">
