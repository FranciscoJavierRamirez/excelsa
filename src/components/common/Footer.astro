          <div class="flex items-start mb-2">
            <i class="fas fa-map-marker-alt mt-1 mr-2"></i>
            <span>Condominio San Francisco de Chacabuco parcela 84 km 37 Los Libertadores</span>
          </div>
          <div class="flex items-center">
            <i class="far fa-clock mr-2"></i>
            <span>Sábados de 10:00 a 14:00 hrs</span>
          </div>
        </div>
      </div>
      
      <!-- Columna 4: Contacto -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Contacto</h3>
        
        <div class="mb-4">
          <h4 class="text-lg font-medium mb-2">Teléfonos:</h4>
          <div class="flex items-center mb-2">
            <i class="fas fa-phone mr-2"></i>
            <span>+56 9 8228 9832</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-phone mr-2"></i>
            <span>+56 9 8228 9831</span>
          </div>
        </div>
        
