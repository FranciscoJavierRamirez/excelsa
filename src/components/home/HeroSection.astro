  ---
// src/components/home/HeroSection.astro
import Button from "../common/Button.astro";

const { 
  heading = "Medicina Integral para tu Bienestar", 
  subheading = "Cuidamos de tu salud de manera holística",
  backgroundImage = "/assets/images/hero/hero_excelsa.jpg"
} = Astro.props;
---

<section class="relative w-full h-screen max-h-[600px] overflow-hidden rounded-3xl mb-20 shadow-xl">
  <!-- Imagen de fondo con fade-in cálido -->
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImage}
      alt="Centro de medicina integral Excelsa - Calidad de vida y medicina alternativa"
      class="w-full h-full object-cover opacity-0 animate-hero-fade"
    />
  </div>

  <!-- Overlay cálido y acogedor -->
  <div class="absolute inset-0 bg-gradient-to-tr from-amber-100/60 via-orange-100/40 to-rose-100/30 mix-blend-multiply z-10"></div>

  <!-- Contenido hero con animación de aparición y deslizamiento sutil -->
  <div class="relative h-full container mx-auto px-4 flex flex-col justify-center items-center sm:items-end z-20">
    <div class="w-[92%] sm:w-auto max-w-md sm:max-w-lg bg-gradient-to-br from-amber-50/95 via-orange-50/90 to-rose-50/85 backdrop-blur-sm p-5 sm:p-8 rounded-2xl border border-amber-200/50 shadow-lg opacity-0 translate-y-3 animate-content-fade text-center sm:text-left">
      <div class="flex items-center mb-6">
        <div class="w-3 h-3 bg-gradient-to-r from-amber-400 to-orange-400 rounded-full mr-3 animate-pulse"></div>
        <span class="text-amber-700 text-sm font-medium tracking-wide uppercase">Encuentra tu equilibrio interior</span>
      </div>

      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-light mb-4 text-amber-900 leading-tight">
        EXCELSA
        <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl font-normal text-amber-800 mt-1">
          Calidad de Vida
        </span>
        <span class="block text-lg sm:text-xl md:text-2xl lg:text-3xl font-light text-amber-700 mt-1">
          Medicina Alternativa
        </span>
      </h1>

      <p class="text-base sm:text-lg md:text-xl mb-6 sm:mb-8 text-amber-800/90 leading-relaxed font-light italic">
        "Descubre el camino hacia tu bienestar integral y abraza una vida plena en armonía"
      </p>

      <div class="flex flex-col space-y-3">
        <a href="/contacto" class="bg-gradient-to-r from-amber-500 to-orange-500 text-white hover:from-amber-600 hover:to-orange-600 py-3 sm:py-4 px-6 sm:px-8 rounded-full font-medium transition-all duration-300 shadow-md hover:shadow-xl transform hover:scale-105 text-center text-base sm:text-lg">
          ✨ Inicia tu Transformación
        </a>
        <a href="/servicios" class="border-2 border-amber-500/70 text-amber-700 hover:bg-amber-500/10 py-2.5 sm:py-3 px-6 sm:px-8 rounded-full font-medium transition-all duration-300 text-center backdrop-blur-sm text-sm sm:text-base">
          Conoce nuestras Terapias
        </a>
      </div>
    </div>
  </div>

  <style>
    @keyframes heroFade {
      0% { opacity: 0; transform: scale(1.02); }
      60% { opacity: 0.9; transform: scale(1.005); }
      100% { opacity: 1; transform: scale(1); }
    }

    @keyframes contentFadeUp {
      0% { opacity: 0; transform: translateY(12px); }
      60% { opacity: 1; transform: translateY(2px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    .animate-hero-fade {
      animation: heroFade 900ms ease-out 80ms both;
    }

    .animate-content-fade {
      animation: contentFadeUp 800ms ease-out 220ms both;
    }
  </style>
</section>