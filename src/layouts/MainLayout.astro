---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
  title: string;
  description?: string;
  contactInfo?: {
    phone: string;
    email: string;
    address: string;
  };
}

const { 
  title, 
  description = "Excelsa - Centro de Medicina Integral para tu bienestar",
  contactInfo = {
    phone: "+52 555 123 4567",
    email: "info@excelsa.com",
    address: "Av. Salud 123, Col. Bienestar, Ciudad de México"
  }
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | Excelsa</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-sky-50 flex flex-col">
    <!-- Remover o comentar este div que está causando problemas -->
    <!-- <div class="absolute inset-0 bg-gradient-to-b from-sky-100 to-white opacity-70 z-0"></div> -->
    <Header />
    <main class="flex-grow pt-[60px] relative z-10">
      <slot />
    </main>
    <Footer phone={contactInfo.phone} email={contactInfo.email} address={contactInfo.address} />
  </body>
</html>
